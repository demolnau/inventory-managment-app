
extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='item_name') Item:
      input#item_name.form-control(type='text' placeholder='Tee shirt etc' name='item_name' required='true' value=(undefined===item ? '' : item.item_name) )
    div.form-group
      label(for='description') Description: 
      input#description.form-control(type='text' placeholder='100% cotton fabric' name='description' required='true' value=(undefined===item ? '' : item.description))
    div.form-group
      label(for='category') Category: 
      input#category.form-control( type='text' placeholder='clothing, novelty, etc' name='category' value=(undefined===item ? '': item.category))
    div.form-group
      label(for='price') Price: 
      input#price.form-control(type='text' placeholder='19.99' name='price' value=(undefined===item ? '' : item.price))
    div.form-group
      label(for='number_in_stock') Number in Stock: 
      input#number_in_stock.form-control(type='text' placeholder='3' name='number_in_stock'  value=(undefined===item ? '' : item.number_in_stock))
    //- div.form-group
        //- input(type="file" name="image" accept="image/*")
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg